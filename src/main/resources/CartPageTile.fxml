<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="135.0" prefWidth="535.0" styleClass="background-tile" stylesheets="@Stylesheet/CartPage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="User_Interface.CartPageTileController">
   <children>
      <ImageView fx:id="GameTileImage_Image" fitHeight="115.0" fitWidth="77.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" smooth="false">
         <image>
            <Image url="@Image/SmallTileTestPicture.png" />
         </image>
      </ImageView>
      <VBox layoutX="105.0" layoutY="10.0" prefHeight="115.0" prefWidth="350.0">
         <children>
            <Label fx:id="GameName_Label" prefWidth="350.0" styleClass="sudlabel" text="Game Name" />
            <HBox prefWidth="350.0">
               <children>
                  <Label styleClass="sudlabel" text="AGS" />
                  <Label fx:id="GameTilePrice_Label" prefHeight="25.0" prefWidth="307.0" styleClass="sudlabel" text="0000.00" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="GameTileRemove_Button" layoutX="471.0" layoutY="105.0" mnemonicParsing="false" onMouseClicked="#HandlesMouseClicked" styleClass="Remove-Button" text="Remove">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</Pane>
